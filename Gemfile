source 'https://rubygems.org'

# Web framework
gem 'rails', '4.2.5'
# sqlite3 database
gem 'sqlite3'
# Nice CSS preprocessor
gem 'sass-rails', '~> 5.0'
# Compress front end assets
gem 'uglifier', '>= 1.3.0'

# Rails front end requirement
gem 'jquery-rails'
# https://github.com/rails/turbolinks
gem 'turbolinks'
# JSON API DSL
gem 'jbuilder', '~> 2.0'


group :development, :test do
  # Insert a debugger breakpoint by writing `binding.pry`
  gem 'pry-byebug'

  # Test framework
  gem 'rspec-rails', '~> 3.0'
end

group :development do
  # Interactive debugger in the error page
  gem 'web-console', '~> 2.0'

  # Magic to speed up app development load time
  gem 'spring'
end